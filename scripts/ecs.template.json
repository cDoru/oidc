{   
    "family": "$TASK_FAMILY",
    "taskRoleArn": "arn:aws:iam::197315730647:role/oidc-role",
    "containerDefinitions": [
        {   
            "name": "$TASK_FAMILY",
            "image": "$DOCKER_REPO",
            "cpu": 256,
            "memory": 384, 
            "portMappings": [
                {
                    "containerPort": 5000,
                    "hostPort": 5000,
                    "protocol": "tcp"
                }
            ],  
            "essential": true,   
            "command": [ 
                "dotnet OpenIdConnectServer.dll"
            ],
            "environment": [
                { "name": "SigningKey:CertUrls", "value": "s3://cmsd2-secure/oidc/certs/1.pfx" },
                { "name": "ASPNETCORE_URLS", "value": "http://0.0.0.0:5000" }
            ],
            "mountPoints": [
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "auth",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "oidc"
                }
            } 
        }
    ],
    "volumes": [
    ]   
}