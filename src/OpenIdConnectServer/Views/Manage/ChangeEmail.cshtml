@model ChangeEmailViewModel
@{
    ViewData["Title"] = "Change Email";
}


<div class="section">
    <h2>@ViewData["Title"].</h2>
    <div class="row">
        <div class="col s12 m8">

            <form asp-controller="Manage" asp-action="ChangeEmail" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h5>
                    Change your email address. You will be sent an email with a confirmation link.
                </h5>
                <hr />
                
                <div asp-validation-summary="All" class="text-danger"></div>

                <p>
                    <div class="input-field">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="validate" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </p>

                <p>
                    <div class="input-field">
                        <button type="submit" class="btn btn-default">Send confirmation link</button>
                    </div>
                </p>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
