@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="section">
    <h2>@ViewData["Title"].</h2>
    <div class="row">
        <div class="col s12 m8">

            <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                <h5>Change Password Form</h5>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <p>
                    <div class="input-field">
                        <label asp-for="OldPassword"></label>
                        <input asp-for="OldPassword" class="validate" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </p>
                <p>
                    <div class="input-field">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="validate" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </p>
                <p>
                    <div class="input-field">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="validate" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </p>
                <p>
                    <div class="input-field">
                        <button type="submit" class="btn btn-default">Change password</button>
                    </div>
                </p>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
