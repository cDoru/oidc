@model RemoveAuthenticatorViewModel
@{
    ViewData["Title"] = "Remove Authenticator";
}

<div class="section">
    <h2>@ViewData["Title"].</h2>

    <div class="row">
        <div class="col s12 m8">
            <form asp-controller="Manage" asp-action="RemoveAuthenticator" method="post" class="form-horizontal">

                <hr />
                <p>
                    Enter the code showing on your authenticator to remove it.
                </p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <p>
                    <div class="input-field">
                        <label asp-for="Code"></label>
                        <input asp-for="Code" class="validate" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </p>
                <p>
                    <div class="input-field">
                        <button type="submit" class="btn btn-default">Remove authenticator</button>
                    </div>
                </p>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}